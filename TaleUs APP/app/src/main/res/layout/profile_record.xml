<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="129dp"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/record_bg"
        android:layout_width="fill_parent"
        android:layout_height="119dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_profile_history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/record_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="123123123"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/record_bg"
        app:layout_constraintTop_toTopOf="@+id/record_bg" />

    <ImageView
        android:id="@+id/record_pin"
        android:layout_width="7dp"
        android:layout_height="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/ic_pin"
        app:layout_constraintStart_toStartOf="@+id/record_bg"
        app:layout_constraintTop_toBottomOf="@+id/record_text" />

    <TextView
        android:id="@+id/loc_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="555555, 666666"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/record_pin"
        app:layout_constraintTop_toBottomOf="@+id/record_text" />

    <ImageView
        android:id="@+id/record_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/record_bg"
        app:layout_constraintTop_toBottomOf="@+id/loc_textView"
        android:background="@drawable/ic_record_play" />

</androidx.constraintlayout.widget.ConstraintLayout>